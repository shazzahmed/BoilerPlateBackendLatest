<!-- 
  ============================================================
  Add this to your web.config file to set timezone
  ============================================================
  
  Instructions:
  1. Open your web.config file
  2. Find the <aspNetCore> section
  3. Add the <environmentVariables> section inside it
  4. Deploy to SmarterASP.NET
  5. Recycle application pool (may need to contact support)
  
  ============================================================
-->

<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <aspNetCore processPath="dotnet" 
                  arguments=".\SMSBACKEND.Presentation.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="outofprocess"
                  forwardWindowsAuthToken="false">
        
        <!-- âœ… ADD THIS SECTION TO SET PAKISTAN TIMEZONE -->
        <environmentVariables>
          <environmentVariable name="TZ" value="Asia/Karachi" />
          <environmentVariable name="WEBSITE_TIME_ZONE" value="Pakistan Standard Time" />
        </environmentVariables>
        <!-- END OF TIMEZONE SECTION -->
        
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>

